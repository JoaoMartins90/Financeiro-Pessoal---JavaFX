<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.financeiro.controller.TransactionController"
          hgap="10" vgap="10" alignment="CENTER"
          prefWidth="400" prefHeight="300">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Descrição" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Valor (ex: 123.45)" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Tipo" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ChoiceBox fx:id="typeBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Categoria" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="categoryField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Data" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Button text="Salvar" onAction="#onSave" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </children>
</GridPane>
